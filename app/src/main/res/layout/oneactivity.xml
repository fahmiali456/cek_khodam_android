<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A1C3E"
    android:gravity="center"
    tools:context=".MainActivity">

    <!-- Progress bar untuk meniru indikator atas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2ECF58" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#CCCCCC" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#CCCCCC" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#CCCCCC" />
    </LinearLayout>

    <!-- Gambar utama -->
    <ImageView
        android:id="@+id/tiger"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/harimau"
        android:scaleType="centerCrop"
        android:contentDescription="@string/tiger_image_desc" />/>


    <!-- Text view -->
    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Siapkah Kamu Mengetahui Jati Diri Sesungguhnya"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:textAlignment="center" />

    <!-- Tombol -->
    <Button
        android:id="@+id/btnLanjutkan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Lanjutkan"
        android:backgroundTint="#FFFFFF"
        android:textColor="#0A1C3E"
        android:fontFamily="sans-serif-medium" />
</LinearLayout>