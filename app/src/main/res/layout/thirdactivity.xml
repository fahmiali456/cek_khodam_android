<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A1C3E"
    android:gravity="center">

    <!-- Progress bar untuk meniru indikator atas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#CCCCCC" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2ECF58" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2ECF58" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#CCCCCC" />
    </LinearLayout>

    <!-- Gambar utama -->
    <ImageView
        android:id="@+id/imageGuru"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/gambar3"
        android:scaleType="centerCrop"
        android:contentDescription="@string/guru_tiger_image_desc" />

    <!-- Text view -->
    <TextView
        android:id="@+id/textT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Mari Berkenalan Dengan Dirimu Seutuhnya"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:textAlignment="center" />

    <!-- Tombol -->
    <Button
        android:id="@+id/btnM1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Mulai"
        android:backgroundTint="#FFFFFF"
        android:textColor="#0A1C3E"
        android:fontFamily="sans-serif-medium" />
</LinearLayout>